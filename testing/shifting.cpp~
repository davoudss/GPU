#include <iostream>
#include <fftw3.h>
#include <../lib/dmathlib.h>



int main(){
  fftw_complex *x;
  int N=4;
  x   = (fftw_complex*) fftw_malloc(sizeof(fftw_complex) * N*N);


  for (int i=0;i<N;i++){
    for (int j=0;j<N;j++){
      x[i*N+j][0] = i*N+j+1;
      x[i*N+j][0] = 0;

      std::cout << x[i*N+j][0] << " ";
    }
    std::cout << "\n";
  }

  fftshiftn(x,x,N,N,N,1);

  for (int i=0;i<N;i++){
    for (int j=0;j<N;j++){
      std::cout << x[i*N+j][0] << " ";
    }
    std::cout << "\n";
  }

  return 0;
}
  

